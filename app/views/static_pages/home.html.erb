<div class="home">
    <div class="stats">
        <ul class="stats-border">
            <li>
                <% if current_user.avatar? %>
                    <%= image_tag current_user.avatar.url, class: "profile_img" %>
                <% end %>
            </li>
            <li><%= current_user.name %></li>
            <li><i class="fa-solid fa-piggy-bank"></i> <%= @discount_sum %>円</li>
            <img src="/public/uploads/tmp/noavatar.png">
            <!--
            <li><%= current_user.followers.count %> follow / <%= current_user.following.count%> followers</li>
            -->
        </ul>
    </div>

    <div class="main">
        <div class="search">
            <%= form_with url: search_path, local: false, method: :get do |f| %>
                <%= f.text_field :word, placeholder: "検索キーワード", class: "search-box" %>
                <%= f.submit "検索", class: "search-btn" %>
            <% end %>
        <div>

        <%# パーシャルのpostsに、@postsを代入 %>
        <div class="post-list">
            <%= render 'posts/post', posts: @posts %>
            <%= will_paginate @posts %>
        </div>
    </div>
</div>