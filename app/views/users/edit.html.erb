<h1>プロフ編集画面</h1>
<p><%= current_user.name %></p>


<%= form_with(model: current_user, local: true) do |f| %>

    <div>
        <%= f.label :name, "名前" %>
        <%= f.text_field :name, :placeholder =>"#{current_user.name}" %>
    </div>

    <div>
        <%= f.label :email, "メールアドレス" %>
        <%= f.text_field :email, :placeholder =>"#{current_user.email}" %>
    </div>

    <div>
        <%= f.label :avatar, "プロフ写真" %>
        <% if current_user.avatar? %>
            <%= image_tag current_user.avatar.url, class: "profile_img" %>
        <% end %>
        <%= f.file_field :avatar %>
    </div>

    <%= f.submit "更新" %>
<% end %>