<h2 class="before-home-title">新規登録</h2>

<%= form_with(model: @new_user, url: users_path, local: true) do |form| %>
  
    <div class="user-field">
        <%= form.label :email, "メールアドレス", class: "user-field-title" %>
        <%= form.email_field :email, class: "user-field-field" %>
    </div>

    <div class="user-field">
        <%= form.label :password, "パスワード", class: "user-field-title" %>
        <%= form.password_field :password, class: "user-field-field" %>
    </div>

    <div class="user-field">
        <%= form.label :password_confirmation, "パスワード（確認）", class: "user-field-title" %>
        <%= form.password_field :password_confirmation, class: "user-field-field" %>
    </div>

    <div>
        <%= form.submit "新規登録", class: "btn btn-primary user-field-button" %>
    </div>

    <%= link_to 'ログイン', login_path %>

<% end %>