<%= form_with(url: login_path, scope: :session, local: true) do |form| %>
  
  <div class="field">
    <%= form.label :email, "メールアドレス" %>
    <%= form.email_field :email %>
  </div>

  <div class="field">
    <%= form.label :password, "パスワード"%>
    <%= form.password_field :password %>
  </div>

  <div>
    <%= form.submit "ログインする！", class: "btn btn-primary" %>
  </div>

<% end %>